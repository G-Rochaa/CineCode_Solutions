<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/8"
	xmlns:fx="http://javafx.com/fxml/1" fx:id="vboxEditarFather"
	styleClass="vboxEditarFather"
	fx:controller="Control.ControllerEditarFilmesEmBreve">

	<!-- Nome do Filme -->
	<HBox fx:id="forms1" styleClass="forms">
		<Label text="Nome do filme: " styleClass="LabelEditar" />
		<TextField fx:id="inputNomeFilme" styleClass="inputLabel" />
	</HBox>

	<!-- Classificação -->
	<HBox fx:id="forms2" styleClass="forms">
		<Label text="Classificação: " styleClass="LabelEditar" />
		<TextField fx:id="inputClassificacao"
			styleClass="inputLabel" />
	</HBox>

	<!-- Gênero -->
	<HBox fx:id="forms3" styleClass="forms">
		<Label text="Gênero: " styleClass="LabelEditar" />
		<ChoiceBox fx:id="inputGenero" styleClass="inputLabel" />
	</HBox>

	<!-- Sinopse -->
	<HBox fx:id="forms4" styleClass="forms">
		<Label text="Sinopse: " styleClass="LabelEditar" />
		<TextArea fx:id="inputSinopse" styleClass="inputLabel" />
	</HBox>

	<!-- Autor -->
	<HBox fx:id="forms5" styleClass="forms">
		<Label text="Autor: " styleClass="LabelEditar" />
		<TextField fx:id="inputAutor" styleClass="inputLabel" />
	</HBox>

	<!-- Duração -->
	<HBox fx:id="forms6" styleClass="forms">
		<Label text="Duração: " styleClass="LabelEditar" />
		<TextField fx:id="inputDuracao" styleClass="inputLabel" />
	</HBox>

	<!-- Ano de Lançamento -->
	<HBox fx:id="forms7" styleClass="forms">
		<Label text="Ano de Lançamento: " styleClass="LabelEditar" />
		<TextField fx:id="inputAnoLancamento"
			styleClass="inputLabel" />
	</HBox>

	<HBox styleClass="forms_Status_Filme">
		<Label text="Status Filme:" styleClass="LabelEditar" />
		<CheckBox fx:id="ativaFilme" text="Ativar filme?" />
	</HBox>

	<!-- Botões Salvar e Cancelar -->
	<HBox fx:id="fomrs8" styleClass="forms5">
		<Button fx:id="btnSalvar" text="Salvar" onAction="#salvar" />
		<Button fx:id="btnCancelar" text="Cancelar" onAction="#carregaTelaAnterior"/>
	</HBox>



</VBox>
